<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RoladorDeDados.MainPage"
    BackgroundColor="White"
    Title="Rolador de Dados">

    <VerticalStackLayout Padding="24" Spacing="24">

        <!-- Título -->
        <Label
            Text="ROLADOR DE DADOS"
            FontAttributes="Bold"
            FontSize="20"
            TextColor="Black"
            HorizontalOptions="Center" />

        <!-- Número do dado -->
        <Label
            x:Name="ResultLabel"
            Text="6"
            FontAttributes="Bold"
            FontSize="96"
            TextColor="Black"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" />

        <!-- Botão de ação -->
        <Button
            x:Name="RollButton"
            Text="ROLAR O DADO"
            BackgroundColor="#000000"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="0"
            HeightRequest="50"
            Clicked="OnRollClicked" />

        <!-- Histórico -->
        <Label Text="Histórico" FontAttributes="Bold" FontSize="16" />

        <CollectionView
            x:Name="HistoryCollection"
            ItemsSource="{Binding History}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto">
                        <Label 
                            Text="{Binding}" 
                            FontSize="16"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <BoxView 
                            Grid.ColumnSpan="2"
                            HeightRequest="1"
                            BackgroundColor="#E0E0E0"
                            VerticalOptions="End"
                            Margin="0,0,0,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

